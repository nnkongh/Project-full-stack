@page
@model WebBlog.RazorPages.Pages.Auth.ForgotPasswordModel


<div class="login-wrapper">
    <div class="auth-container">
        <div class="form">
            <div class="form-box forgot">
                <span class="title">Quên mật khẩu</span>
                <form id="forgotForm">
                    <div class="input-box">
                        <input id="Email" name="Email" placeholder="Email" required />
                    </div>
                    <div class="input-box ForgotButton">
                        <input type="submit" value="Gửi" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script type="module" src="/js/auth/ForgotPassword.js"></script>
}



